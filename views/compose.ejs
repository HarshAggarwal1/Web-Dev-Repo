<%- include("partials/header") -%>

    <h1>Compose</h1>

    <form action="/compose" method="post" name="composePost">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="composeTitle" placeholder="Enter Title" autocomplete="off">
            <label>Post</label>
            <textarea class="form-control" name="composeText" placeholder="Enter Text" cols="30" rows="5"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="publish">Publish</button>
    </form>

<%- include("partials/footer") -%>